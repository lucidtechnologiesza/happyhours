<!DOCTYPE html>
<html>

<head>
    <title>happyHours</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <!--In order for the form to be responsive and function well-->
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.js"></script>

    <!--This is for a form style-->
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <!--To hide menue-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <!--This helps use to view the Form-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!--User defined css-->
    <link rel="stylesheet" href="css/admin.css">

</head>

<body>


    <!-- Navbar -->
    <div class="w3-top" id="home">
        <div class="w3-bar w3-red w3-card w3-left-align w3-large">
            <a class="w3-bar-item w3-button w3-hide-medium w3-hide-large w3-right w3-padding-large w3-hover-white w3-large w3-red" href="javascript:void(0);" onclick="myFunction()" title="Toggle Navigation Menu"><i class="fa fa-bars"></i></a>
            <a href="home.html" class="w3-bar-item w3-button w3-padding-large w3-white w3-hover-red">Home</a>
            <a href="home.html #gallery" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">Gallery</a>
            <a href="home.html #service" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">Service</a>
            <a href="#" class="w3-bar-item w3-button w3-padding-large w3-hover-white login-trigger">Logout</a>

        </div>

        <!-- Navbar on small screens -->
        <div id="navDemo" class="w3-bar-block w3-white w3-hide w3-hide-large w3-hide-medium w3-large">
            <a href="#gallery" class="w3-bar-item w3-button w3-padding-large w3-hover-red">Gallery</a>
            <a href="#service" class="w3-bar-item w3-button w3-padding-large w3-hover-red">Service</a>
            <a href="Register.html" class="w3-bar-item w3-button w3-padding-large w3-hover-red">Register</a>
            <!-- <a href="#" class="w3-bar-item w3-button w3-padding-large w3-hover-red" data-toggle="modal" data-target="#login-modal">Login</a> -->
        </div>
    </div>
    <!--upload / or ugrade gallery -->

    <!--Table for registered kid-->
    <div class="w3-container" style="padding:90px 16px">
        <h2>Registered Leaners </h2>

        <input type="text" id="myInput" onkeyup="myFunction1()" placeholder="Search for names.." title="Type in a name">
        <div class="w3-row-padding" style="margin:0 -16px 8px -16px; overflow-x:auto;">
            <table class="w3-table" id="myTable">
                <tr class="header">
                    <th style="width:5%;">#</th>
                    <th style="width:20%;">Name</th>
                    <th style="width:20%;">Surname</th>
                    <th style="width:20%;">Gender</th>
                    <th style="width:20%;">Date of birth</th>
                    <th style="width:5%;">Update</th>
                    <th style="width:5%;">Delete</th>
                    <th style="width:5%;">Details</th>
                </tr>

                <%users.forEach(function(element) {%>
                    <tr>
                        <td>
                            <%=element.user_id%>
                        </td>
                        <td>
                            <%=element.childName%>
                        </td>
                        <td>
                            <%=element.childSurname%>
                        </td>
                        <td>
                            <%=element.childGender%>
                        </td>
                        <td>
                            <%=element.childDateOfBirth%>
                        </td>

                        <td><span class="material-icons" data-toggle="tooltip" style="cursor: pointer;" title="update user details" onclick="document.getElementById('id01').style.display='block'">add_circle</span></td>
                        <td><span class="material-icons" data-toggle="tooltip" style="cursor: pointer;" title="delete user details">delete</span></td>
                        <td><span class="material-icons" data-toggle="tooltip" style="cursor: pointer;" title="view user details" onclick="document.getElementById('id02').style.display='block'">info</span></td>

                    </tr>
                    <% }); %>
            </table>
        </div>
        <!-- update forms -->
        <div class="w3-container">
            <div id="id01" class="w3-modal">
                <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:600px">


                    <header class="w3-container w3-red">
                        <%users.forEach(function(element) {%>
                            <h2>
                                <%=element.childName%>
                                    <%=element.childSurname%>
                            </h2>
                            <% }); %>
                    </header>


                    <div class="w3-bar w3-border-bottom">
                        <button class="tablink w3-bar-item w3-button" onclick="openuserDetails(event, 'childDetails')">Child</button>
                        <button class="tablink w3-bar-item w3-button" onclick="openuserDetails(event, 'motherDetails')">Mother</button>
                        <button class="tablink w3-bar-item w3-button" onclick="openuserDetails(event, 'fatherDetails')">Father</button>
                    </div>
                    <!-- child details -->
                    <div id="childDetails" class="w3-container userDetails">
                        <form class="w3-container" action="">
                            <div class="w3-section">
                                <label for="childSurname"> Surname</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="text" id="childSurname" name="childSurname" placeholder="Surname">

                                <label for="childName"> Name</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="text" id="childName" name="childName" placeholder="Name">

                                <label for="childKnownAs">Also Known as</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="text" id="childKnownAs" name="childKnownAs" placeholder="Prefered Child Name">

                                <label for="childDateOfBirth">Date of birth</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="date" name="childDateOfBirth" id="childDateOfBirth" placeholder="Date of birth">

                                <label for="childGender"> Gender</label>
                                <select class="w3-select w3-border" name="childGender" id="childGender">
                                <option value="">Choose yours</option>
                                <option value="female">Female</option>
                                <option value="male">Male</option>
                            </select>

                                <label for="childRace">Ethinic group</label>
                                <select class="w3-select w3-border" name="childRace" id="childRace">
                                    <option value="">Choose yours</option>
                                    <option value="black">Black</option>
                                    <option value="coloured">Coloured</option>
                                    <option value="asianIndian">Asian/Indian</option>
                                    <option value="white">White</option>
                                </select>

                                <label for="childReligion"> Religion</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="text" id="childReligion" name="childReligion" placeholder="Religion">

                                <label>Enrollment Date</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="date" id="childEnrolmentDate" name="childEnrolmentDate" placeholder="Enrollment Date">

                                <label for="childHomeLanguage">Home language</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="text" id="childHomeLanguage" name="childHomeLanguage" placeholder="Home language">
                                <button class="w3-button w3-block w3-red w3-section w3-padding" type="submit">update</button>
                            </div>
                        </form>
                    </div>
                    <!-- mother details -->
                    <div id="motherDetails" class="w3-container userDetails">
                        <form class="w3-container" action="">
                            <div class="w3-section">

                                <label for="title">Title</label>
                                <select class="w3-input w3-border w3-margin-bottom" name="motherOrGuardianTitle" id="motherOrGuardianTitle">
                                    <option value="">Choose yours</option>
                                    <option value="dr">Dr.</option>
                                    <option value="mrs">Mrs.</option>
                                    <option value="miss">Miss.</option>
                                    <option value="ms">Ms</option>
                                    <option value="rev">Rev</option>
                                    <option value="prof">Prof</option>
                                    <option value="adv">Adv</option>
                                    <option value="hon">Hon</option>
                                </select>

                                <label for="motherOrGuardianRelationship">Relationship to child</label>
                                <select class="w3-input w3-border w3-margin-bottom" name="motherOrGuardianRelationship" id="motherOrGuardianRelationship">
                                    <option value="mother">Mother</option>
                                    <option value="guardian">Guardian</option>
                                </select>

                                <label for="motherOrGuardianSurname"> Surname</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="text" id="motherOrGuardianSurname" name="motherOrGuardianSurname" placeholder="Surname ">

                                <label for="motherOrGuardianName"> Name</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="text" id="motherOrGuardianName" name="motherOrGuardianName" placeholder="Name ">

                                <label for="motherOrGuardianIdNumber"> ID Number</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="text" id="motherOrGuardianIdNumber" name="motherOrGuardianIdNumber" placeholder="ID number ">

                                <label for="motherOrGuardianEmail"> E-mail address</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="email" id="motherOrGuardianEmail" name="motherOrGuardianEmail" placeholder="E-mail address ">

                                <label for="motherOrGuardianHomeTel"> Home telephone</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="text" id="motherOrGuardianHomeTel" name="motherOrGuardianHomeTel" placeholder="Home telephone">

                                <label for="motherOrGuardianWorkTel">Work telephone</label>
                                <input class="w3-input w3-border w3-margin-bottom" type="text" id="motherOrGuardianWorkTel" name="motherOrGuardianWorkTel" placeholder="Work telephone">

                                <label for="motherOrGuardianWorkTel">Cellphone </label>
                                <input class="w3-input w3-border w3-margin-bottom" type="text" id="motherOrGuardianCell" name="motherOrGuardianCell" placeholder="Cellphone">

                                <label for="motherOrGuardianOccupation"> Mom’s occupation </label>
                                <input class="w3-input w3-border w3-margin-bottom" type="text" id="motherOrGuardianOccupation" name="motherOrGuardianOccupation" placeholder="Mom’s occupation and place of work ">

                                <label for="motherOrGuardianResidential">Residential Address </label>
                                <textarea class="w3-input w3-border w3-margin-bottom" id="motherOrGuardianResidential" name="motherOrGuardianResidential" placeholder="Residential address "></textarea>

                                <label for="motherOrGuardianPostal">Postal Address </label>
                                <textarea class="w3-input w3-border w3-margin-bottom" id="motherOrGuardianPostal" name="motherOrGuardianPostal" placeholder="Postal Address "></textarea>

                                <button class="w3-button w3-block w3-red w3-section w3-padding" type="submit">update</button>
                            </div>
                        </form>
                    </div>
                    <!-- father details -->
                    <div id="fatherDetails" class="w3-container userDetails">
                        <div class="w3-section">
                            <label for="fatherOrGuardianTitle">Title</label>
                            <select class="w3-input w3-border w3-margin-bottom" name="fatherOrGuardianTitle" id="fatherOrGuardianTitle">
                                <option value="">Choose yours</option>
                                <option value="dr">Dr.</option>
                                <option value="mr">Mr.</option>
                                <option value="rev">Rev</option>
                                <option value="prof">Prof</option>
                                <option value="adv">Adv</option>
                                <option value="hon">Hon</option>
                            </select>

                            <label for="fatherOrGuardianRelationship">Relationship to child</label>
                            <select class="w3-input w3-border w3-margin-bottom" name="fatherOrGuardianRelationship" id="fatherOrGuardianRelationship">
                                <option value="father">father</option>
                                <option value="guardian">Guardian</option>
                            </select>

                            <label for="fatherOrGuardianName"> Name</label>
                            <input class="w3-input w3-border w3-margin-bottom" type="text" id="fatherOrGuardianName" name="fatherOrGuardianName" placeholder="Name">

                            <label for="fatherOrGuardianSurname">Surname</label>
                            <input class="w3-input w3-border w3-margin-bottom" type="text" id="fatherOrGuardianSurname" name="fatherOrGuardianSurname" placeholder="Surname">

                            <label for="fatherOrGuardianIdNumber"> ID number</label>
                            <input class="w3-input w3-border w3-margin-bottom" type="text" id="fatherOrGuardianIdNumber" name="fatherOrGuardianIdNumber" placeholder="ID number">

                            <label for="fatherOrGuardianEmail"> E-mail address</label>
                            <input class="w3-input w3-border w3-margin-bottom" type="text" id="fatherOrGuardianEmail" name="fatherOrGuardianEmail" placeholder="E-mail address ">

                            <label for="fatherOrGuardianWorkTel">Work telephone</label>
                            <input class="w3-input w3-border w3-margin-bottom" type="text" id="fatherOrGuardianWorkTel" name="fatherOrGuardianWorkTel" placeholder="Work telephone ">

                            <label for="fatherOrGuardianHomeTel"> Home Telephone</label>
                            <input class="w3-input w3-border w3-margin-bottom" type="text" id="fatherOrGuardianHomeTel" name="fatherOrGuardianHomeTel" placeholder="Home telephone">

                            <label for="fatherOrGuardianCell">Cellphone number</label>
                            <input class="w3-input w3-border w3-margin-bottom" type="text" id="fatherOrGuardianCell" name="fatherOrGuardianCell" placeholder="Cellphone number ">

                            <label for="fatherOrGuardianOccupation">Dad’s occupation (Compulsory) </label>
                            <input class="w3-input w3-border w3-margin-bottom" type="text" id="fatherOrGuardianOccupation" name="fatherOrGuardianOccupation" placeholder="Dad’s occupation and place of work ">

                            <label for="fatherOrGuardianResidential">Residential address </label>
                            <textarea class="w3-input w3-border w3-margin-bottom" id="fatherOrGuardianResidential" name="fatherOrGuardianResidential" placeholder="Residential address "></textarea>

                            <label for="fatherOrGuardianPostal">Postal address </label>
                            <textarea class="w3-input w3-border w3-margin-bottom" id="fatherOrGuardianPostal" name="fatherOrGuardianPostal" placeholder="Postal Address "></textarea>
                            <button class="w3-button w3-block w3-red w3-section w3-padding" type="submit">update</button>
                        </div>
                    </div>

                    <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
                        <button onclick="document.getElementById('id01').style.display='none'" type="button" class="w3-button w3-red">Cancel</button>
                    </div>

                </div>
            </div>
        </div>

        <div id="id02" class="w3-modal">
            <div class="w3-modal-content w3-card-4">
                <header class="w3-container w3-red">
                    <span onclick="document.getElementById('id02').style.display='none'" class="w3-button w3-display-topright">&times;</span>
                    <%users.forEach(function(element) {%>
                        <h2>
                            <%=element.user_id%> .
                                <%=element.childName%>
                                    <%=element.childSurname%>
                        </h2>
                </header>
                <div class="w3-container">
                    prefered name:
                    <%=element.childKnownAs%>
                        <br> Gender:
                        <%=element.childGender%>
                            <br> Date of birth:
                            <%=element.childDateOfBirth%>
                                <br> Race:
                                <%=element.childKnownAs%>
                                    <br> Parent's info
                                    <br> Mother:
                                    <%=element.motherOrGuardianName%> <br> Father:
                                        <%=element.fatherOrGuardianName%>

                </div>
                <footer class="w3-container w3-red">
                    <p>Enrolled date:
                        <%=element.childEnrolmentDate%>
                    </p>
                </footer>
                <% }); %>
            </div>

        </div>
        <script>
            $(document).ready(function() {
                $('[data-toggle="tooltip "]').tooltip();
            });
        </script>

        <script>
            document.getElementsByClassName("tablink")[0].click();

            function openuserDetails(evt, userDetailsName) {
                var i, x, tablinks;
                x = document.getElementsByClassName("userDetails");
                for (i = 0; i < x.length; i++) {
                    x[i].style.display = "none";
                }
                tablinks = document.getElementsByClassName("tablink");
                for (i = 0; i < x.length; i++) {
                    tablinks[i].classList.remove("w3-light-grey");
                }
                document.getElementById(userDetailsName).style.display = "block";
                evt.currentTarget.classList.add("w3-light-grey");
            }
        </script>

        <script src="js/admin.js "></script>
</body>

</html>